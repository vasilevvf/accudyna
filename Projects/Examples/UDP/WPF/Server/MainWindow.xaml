<Window x:Class="Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Server"
        mc:Ignorable="d"
        Title="Server" Height="281" Width="699" Loaded="Window_Loaded" Closed="Window_Closed">
    <Grid Background="#d2d2d2" Margin="0,0,0,-6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="225*"/>
            <ColumnDefinition Width="8*"/>
        </Grid.ColumnDefinitions>
        <StackPanel HorizontalAlignment="Left" Margin="0,21,0,0" Orientation="Vertical" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="218" Width="680">
            <Border Height="119" BorderThickness="2,2,2,2" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}">
                <Grid Width="678">
                    <StackPanel>
                        <Label Content="Отправленная команда. byte, ushort, float. Прямой порядок байт." FontSize="14"/>
                        <StackPanel Height="55" Width="664" Orientation="Horizontal" HorizontalAlignment="Left">
                            <StackPanel Height="52" Width="61">
                                <Label Content="Header"/>
                                <TextBox x:Name="textBox" TextWrapping="Wrap" Text="0x85_85"/>
                            </StackPanel>
                            <StackPanel Height="52" Width="61">
                                <Label Content="Axis ID"/>
                                <TextBox x:Name="textBox1" TextWrapping="Wrap" Text="0x05"/>
                            </StackPanel>
                            <StackPanel Height="52" Width="100">
                                <Label Content="Command Mode"/>
                                <TextBox x:Name="textBox2" TextWrapping="Wrap" Text="0x06"/>
                            </StackPanel>
                            <StackPanel Height="52" Width="61">
                                <Label Content="C1"/>
                                <TextBox x:Name="textBox3" TextWrapping="Wrap" Text="0.1"/>
                            </StackPanel>
                            <StackPanel Height="52" Width="61">
                                <Label Content="C2"/>
                                <TextBox x:Name="textBox4" TextWrapping="Wrap" Text="0.2"/>
                            </StackPanel>
                            <StackPanel Height="52" Width="61">
                                <Label Content="C3"/>
                                <TextBox x:Name="textBox5" TextWrapping="Wrap" Text="0.3"/>
                            </StackPanel>
                            <StackPanel Height="52" Width="61">
                                <Label Content="C4"/>
                                <TextBox x:Name="textBox6" TextWrapping="Wrap" Text="0x07"/>
                            </StackPanel>
                            <StackPanel Height="52" Width="61">
                                <Label Content="Reserved"/>
                                <TextBox x:Name="textBox7" TextWrapping="Wrap" Text="0x00_08"/>
                            </StackPanel>
                            <StackPanel Height="52" Width="61">
                                <Label Content="Counter"/>
                                <TextBox x:Name="textBox8" TextWrapping="Wrap" Text="0x09"/>
                            </StackPanel>
                            <StackPanel Height="52" Width="65">
                                <Label Content="Checksum"/>
                                <TextBox x:Name="textBox9" TextWrapping="Wrap" Text=""/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                    <Button Content="Отправить" Click="Button_Click" Margin="0,90,25,0"/>
                </Grid>
            </Border>
            <Border BorderThickness="2,2,2,2" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}">
                <StackPanel>
                    <Label Content="Ответ на команду. Hex. Обратный порядок байт." FontSize="14"/>
                    <StackPanel Height="55" Width="664" Orientation="Horizontal" HorizontalAlignment="Left">
                        <StackPanel Height="52" Width="61">
                            <Label Content="Header"/>
                            <TextBox x:Name="textBox10" TextWrapping="Wrap" Text=""/>
                        </StackPanel>
                        <StackPanel Height="52" Width="61">
                            <Label Content="Type"/>
                            <TextBox x:Name="textBox11" TextWrapping="Wrap" Text=""/>
                        </StackPanel>
                        <StackPanel Height="52">
                            <Label Content="F1"/>
                            <TextBox x:Name="textBox12" TextWrapping="Wrap" Text=""/>
                        </StackPanel>
                        <StackPanel Height="52">
                            <Label Content="F2"/>
                            <TextBox x:Name="textBox13" TextWrapping="Wrap" Text=""/>
                        </StackPanel>
                        <StackPanel Height="52">
                            <Label Content="F3"/>
                            <TextBox x:Name="textBox14" TextWrapping="Wrap" Text=""/>
                        </StackPanel>
                        <StackPanel Height="52" Width="65">
                            <Label Content="Checksum"/>
                            <TextBox x:Name="textBox15" TextWrapping="Wrap" Text=""/>
                        </StackPanel>

                    </StackPanel>
                </StackPanel>

            </Border>

        </StackPanel>
    </Grid>
</Window>
